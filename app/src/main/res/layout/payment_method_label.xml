<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/paymentMethodNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash"
        android:textColor="#7E7E7E"
        app:layout_constraintEnd_toEndOf="@+id/totalAmountTv"
        app:layout_constraintStart_toStartOf="@+id/totalAmountTv"
        app:layout_constraintTop_toBottomOf="@+id/totalAmountTv" />

    <ImageView
        android:id="@+id/circleLabelIv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@+id/paymentMethodNameTv"
        app:layout_constraintEnd_toStartOf="@+id/totalAmountTv"
        app:layout_constraintTop_toTopOf="@+id/totalAmountTv"
        app:srcCompat="@drawable/background_button"
        app:tint="@color/completed_bg" />

    <TextView
        android:id="@+id/totalAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="515K"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>